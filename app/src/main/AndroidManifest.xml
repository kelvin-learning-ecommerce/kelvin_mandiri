<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PastiSystemTest">
        <activity
            android:name=".ui.home.HomePageActivity"
            android:exported="true"
            android:theme="@style/Theme.PastiSystemTest">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.movielist.MovieListActivity"
            android:exported="true" />
        <activity
            android:name="com.kelvin.pastisystem.ui.moviedetail.MovieDetailActivity"
            android:exported="true" />
        <activity
            android:name="com.kelvin.pastisystem.ui.mlkit.FaceRecognitionActivity"
            android:exported="true" />
        <activity android:name="com.kelvin.pastisystem.ui.mlkit.MlActivity"
            android:exported="true"
            android:theme="@style/Theme.PastiSystemTest"/>

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="face" />
    </application>

</manifest>
